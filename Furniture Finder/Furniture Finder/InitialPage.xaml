<UserControl x:Class="Furniture_Finder.InitialPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Furniture_Finder"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <Image Margin="10,10,10,0" Height="71" VerticalAlignment="Top"/>
        <Grid HorizontalAlignment="Left" Height="354" Margin="10,86,0,0" VerticalAlignment="Top" Width="780" ShowGridLines="True">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="260*"/>
                <ColumnDefinition Width="260*"/>
                <ColumnDefinition Width="260*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="176*"/>
                <RowDefinition Height="176*"/>
            </Grid.RowDefinitions>
            <Border CornerRadius="1" BorderBrush="White" BorderThickness="6" Grid.Row="1" Grid.Column="0" Margin="10,10,10,10">
                <Button FontSize="12" FontWeight="Bold"/>
            </Border>
        </Grid>

    </Grid>
</UserControl>
